<p id="notice"><%= notice %></p>

<div class="container" style=" border: solid 2px #8080806b; border-radius: 2%; padding: 5%">  
  <h1 style="text-align: center">Grupo <%= @group.grupo %></h1>

		<% @group.partidas.each do |partida|%>		
		
		<div class="row" style="background-color: #f8f9fa; margin: 10px; border-radius: 10px 0px 10px 0px; min-height: 140px">			
			<div class="col-sm-12" style=" height: auto; border-radius: 10px 0px 10px 0px;">
                  <h3 style="text-align: center; ">Partida <%= partida.numero %></h3>
            </div>
            <div class="col-sm-2"> 
            		<%= image_tag(partida.teams.first.urlBandeira, :alt => "flag of team", :style =>"width: 50%; text-align: center;") %>
            </div>
            <div class="col-sm-2" style="height: auto;">
              <h3 ><%= link_to partida.teams.first.pais, partida.teams.first %></h3>
            </div>            
            <div class="col-sm-4" style="text-align: center;">
              <div class="row">                
                <div class="col-sm-12" style="height: auto;">
                  <h3 style="background-color: gray"><%= partida.resultado %></h3>
                </div>                        
              </div>                  
            </div>                  
            <div class="col-sm-2" style="height: auto;">
              <h3 ><%= link_to partida.teams.last.pais, partida.teams.last %></h3>
            </div>
            <div class="col-sm-2"> 
            		<%= image_tag(partida.teams.last.urlBandeira, :alt => "flag of team", :style =>"width: 50%; text-align: center;") %>
            </div>        
          </div> 
          <hr style="background-color: darkgray; height: 2px;">          
          <% end -%> 														          
<%#= link_to 'Edit', edit_group_path(@group) %> |
<%#= link_to 'Back', groups_path %>	
</div>

