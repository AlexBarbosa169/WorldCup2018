	<!-- Propriedade image do vocabulário SportsTeam -->
	<p>
	    <span> Bandeira oficial do país: </span>
	    <%= image_tag(@champion.urlBandeira, :alt => "flag of champion", :property => "image", :style => "border: solid 1px black") %>  
	</p>

	<!-- Propriedade location do vocabulário SportsTeam -->
	<div property="location" typeof="Place">
	<p >
	  <strong>Continente: </strong>  
	  <span property="name" ><%= @champion.continente %></span>
	</p>		
	</div>
	<p >
	  <strong>Descrição: </strong>
	  <span property="description" ><%= @champion.descricao %></span>
	</p>    	
</div>
