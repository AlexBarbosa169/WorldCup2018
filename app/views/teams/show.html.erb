<div class="container" style="height: 280px;"> 
<div class="row">

<!-- Adição de vocabulário correspondente a um time esporivo -->
<div  vocab="http://schema.org/" about="#team_<%= @team.pais %>"typeof="SportsTeam">

  
  <!-- Propriedade name do vocabulário SportsTeam -->
   <p>
    <strong>Pais:</strong>
    <span property="name"><%= @team.pais %></span>    
   </p> 
  

<!-- Propriedade image do vocabulário SportsTeam -->
<p>
    <span> Bandeira oficial do país: </span>
    <%= image_tag(@team.urlBandeira, :alt => "flag of team", :property => "image", :style => "border: solid 1px black") %>  
</p>

<!-- Propriedade location do vocabulário SportsTeam -->
<div property="location" typeof="Place">
<p >
  <strong>Continente: </strong>  
  <span property="name" ><%= @team.continente %></span>
</p>		
</div>
<p >
  <strong>Descrição: </strong>
  <span property="description" ><%= @team.descricao %></span>
</p>    



<!-- Definição de um membro da seleção através da propriedade member do tipo OrganizationRole -->

<div property="member" typeof="OrganizationRole">	
  <!-- Definição de um membro do tipo Person -->
  <div property="member" typeof="http://schema.org/Person">
    <p>
      <strong>Jogador de destaque:</strong>
      <!-- Definição do nome do membro com a propriedade name -->
      <span property="name"><%= @team.player.nome %></span>
      <%= link_to 'Visitar Perfil do Jogador', player_path(@team.player), :property => "url" %>
    </p>
  </div>
</div>

